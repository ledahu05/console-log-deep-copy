{
    "manifest_version": 3,
    "name": "Console Log Deep Copy",
    "version": "3.1.0",
    "description": "Capture and deep copy console logs with pattern filtering and selective copying - preserves full object and array structures",
    "permissions": ["activeTab", "storage", "scripting"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "devtools_page": "devtools.html",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": ["page-script.js"],
            "matches": ["<all_urls>"]
        }
    ]
}
